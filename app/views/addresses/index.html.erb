<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Zip</th>
    <th>Street</th>
    <th>State</th>
    <th>Country</th>
    <th>Owner type</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.zip %></td>
    <td><%= address.street %></td>
    <td><%= address.state %></td>
    <td><%= address.country %></td>
    <td><%= address.owner_type %></td>
    <td><%= address.owner_id %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

